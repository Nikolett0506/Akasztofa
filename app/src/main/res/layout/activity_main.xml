<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikolett.akasztofa.MainActivity">

    <TextView
        android:id="@+id/txtv_tipp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:text="A"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignTop="@+id/btn_plusz"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtv_szo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <ImageView
        android:id="@+id/imgv_akasztofa"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@mipmap/akasztofa00"
        android:visibility="visible"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="155dp"
        android:layout_below="@+id/btn_tipp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_tipp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_plusz"
        android:layout_centerHorizontal="true"
        android:text="Tipp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="66dp" />

    <Button
        android:id="@+id/btn_plusz"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/buttonbackround"
        android:text="+"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_tipp"
        android:layout_toStartOf="@+id/btn_tipp" />

    <Button
        android:id="@+id/btn_minusz"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/buttonbackround"
        android:text="-"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_above="@+id/btn_tipp"
        android:layout_toRightOf="@+id/btn_tipp"
        android:layout_toEndOf="@+id/btn_tipp" />



</RelativeLayout>
